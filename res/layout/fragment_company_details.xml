<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/companyDetailsMargin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/companyLogoImageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/companyDetailsCompanyLogoHeight"
            android:background="@drawable/rounded_booth_company_logo"
            android:contentDescription="@string/logoImageDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/companyDetailsSpacingMargin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/companyNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/companyDetailsCompanyNameTextSize" />

            <TextView
                android:id="@+id/boothNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/companyDetailsBoothNumberTextSize" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/companyDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/companyDetailsSpacingMargin"
        android:textColor="@color/white"
        android:textSize="@dimen/companyDetailsDetailsTextSize" />

</LinearLayout>