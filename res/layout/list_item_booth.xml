<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:id="@+id/boothItemCircleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/boothListItemCircleMargin"
        android:background="@drawable/circle_list_item" >
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/boothListItemHeight"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/boothItemCircleLayout"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:singleLine="true"
            android:textSize="@dimen/textSize30" />

        <TextView
            android:id="@+id/boothNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyNameTextView"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:textSize="@dimen/textSize24" />
    </RelativeLayout>

</RelativeLayout>