<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opaque_blue"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/profilePaddingTopBottom"
    android:paddingLeft="@dimen/profilePaddingLeftRight"
    android:paddingRight="@dimen/profilePaddingLeftRight"
    android:paddingTop="@dimen/profilePaddingTopBottom" >

    <LinearLayout
        android:id="@+id/companyDetailsAndCategoriesLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/opaque_grey"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/companyDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/companyCategoriesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/opaque_orange" >

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/border_grey" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/companyAddressContactsAndLinksLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/opaque_red"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/companyAddressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/companyContactsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/companyLinksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/companySocialNetworksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout>