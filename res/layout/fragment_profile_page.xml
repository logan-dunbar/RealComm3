<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profilePageScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/profilePadding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/companyDetailsAndCategoriesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/companyDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companyCategoriesBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/defaultBorderPadding"
                android:paddingTop="@dimen/defaultBorderPadding" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profileBorderWidth"
                    android:layout_gravity="center"
                    android:background="@color/border_grey" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companyCategoriesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/companyAddressContactsAndLinksLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/companyAddressBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/defaultBorderPadding"
                android:paddingTop="@dimen/defaultBorderPadding" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profileBorderWidth"
                    android:layout_gravity="center"
                    android:background="@color/border_grey" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companyAddressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companyContactsBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/defaultBorderPadding"
                android:paddingTop="@dimen/defaultBorderPadding" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profileBorderWidth"
                    android:layout_gravity="center"
                    android:background="@color/border_grey" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companyContactsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companyLinksBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/defaultBorderPadding"
                android:paddingTop="@dimen/defaultBorderPadding" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profileBorderWidth"
                    android:layout_gravity="center"
                    android:background="@color/border_grey" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companyLinksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companySocialNetworksBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/defaultBorderPadding"
                android:paddingTop="@dimen/defaultBorderPadding" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profileBorderWidth"
                    android:layout_gravity="center"
                    android:background="@color/border_grey" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/companySocialNetworksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>